CREATE TABLE icbc.vehicles_2022 (
  City VARCHAR(50),
  `Anti Theft Device Indicator` VARCHAR(50),
  `Body Style` VARCHAR(50),
  `Fleet Vehicle` VARCHAR(50),
  Make VARCHAR(100),
  Model VARCHAR(100),
  `Model Year` INT,
  Municipality VARCHAR(100),
  `Vehicle Count Year` INT
